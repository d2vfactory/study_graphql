schema {
    query: Query
    mutation: Mutation
}

type Product {
    id: Long!
    name: String!
    price: Int!
}

type Query {
    products: [Product]!
    product(id: Long): Product!
    countProducts: Long!
}

type Mutation {
    newProduct(name: String!, price: Int!): Product!
    deleteProduct(id: Long!): Boolean
    updateProductName(id: Long!, name: String!): Product!
    updateProductPrice(id: Long!, price: Int!): Product!
}

